{
    "version": "0.0.1",
    "name": "juizmill/financeiro-clean-arch",
    "description": "Sistema financeiro usando arquitetura limpa",
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0",
        "monolog/monolog": "^3.8",
        "php-di/php-di": "^7.0",
        "slim/psr7": "^1.7",
        "slim/slim": "^4.14",
        "twig/twig": "^3.20",
        "composer/class-map-generator": "^1.6",
        "predis/predis": "^2.3",
        "doctrine/migrations": "^3.8",
        "doctrine/dbal": "^4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "rector/rector": "^2.0",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.9",
        "squizlabs/php_codesniffer": "^3.11",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpmd/phpmd": "^2.15",
        "symfony/dotenv": "^7.2",
        "pheromone/phpcs-security-audit": "^2.0",
        "symfony/var-dumper": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Jesus Vieira",
            "email": "jesusvieiradelima@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "serve": "php -S localhost:8000 -t public",
        "test": "vendor/bin/phpunit",
        "rector-dry": "vendor/bin/rector -n",
        "rector": "vendor/bin/rector",
        "phpstan": "vendor/bin/phpstan analyse",
        "phpcs": "vendor/bin/phpcs --standard=PSR12 src/",
        "phpcbf": "vendor/bin/phpcbf --standard=PSR12 src/",
        "phpmd": "vendor/bin/phpmd src/ text phpmd.xml"
    }
}